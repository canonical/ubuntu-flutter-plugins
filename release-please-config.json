{
  "$schema": "https://github.com/googleapis/release-please/raw/main/schemas/config.json",
  "release-type": "dart",
  "separate-pull-requests": true,
  "pull-request-title-pattern": "chore: release${component} v${version}",
  "changelog-sections": [
    {
      "type": "chore",
      "section": ""
    },
    {
      "type": "feat",
      "section": ""
    },
    {
      "type": "fix",
      "section": ""
    },
    {
      "type": "l10n",
      "section": ""
    }
  ],
  "packages": {
    "packages/platform_linux": {
      "monorepo-tags": true
    },
    "packages/safe_change_notifier": {
      "monorepo-tags": true
    },
    "packages/ubuntu_flavor": {
      "monorepo-tags": true
    },
    "packages/ubuntu_localizations": {
      "monorepo-tags": true
    },
    "packages/ubuntu_logger": {
      "monorepo-tags": true
    },
    "packages/ubuntu_service": {
      "monorepo-tags": true
    },
    "packages/ubuntu_widgets": {
      "monorepo-tags": true
    },
    "packages/wizard_router": {
      "monorepo-tags": true
    },
    "packages/xdg_icons": {
      "monorepo-tags": true
    }
  }
}
